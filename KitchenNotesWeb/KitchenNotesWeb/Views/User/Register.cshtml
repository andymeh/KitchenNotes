@model KitchenNotesWeb.Models.UserHubViewModel

@{
    ViewBag.Title = "Register A New Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Register a New Hub</h1>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
