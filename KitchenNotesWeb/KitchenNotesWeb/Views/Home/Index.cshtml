
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        @if (Request.IsAuthenticated)
        {

            <h1>Welcome @Html.Encode(User.Identity.Name)</h1>
            <h3 class="media-body">HubID : @{Html.RenderAction("HubIdRefs", "Home", new { username = User.Identity.Name });} </h3>
            <h3>Share this ID with people you want to invite to this Hub</h3>
                }
                else
                {
            <h1>Please Sign in Or Register</h1>
            <ul class="list-group">
                <li><button type="button" class="btn btn-success btn-lg" onclick="location.href='@Url.Action("Register", "User")'">Register new Hub</button></li>
                <li><button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("NewUser", "User")'">Join a Hub</button></li>
                <li><button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Login", "User")'">Sign In</button></li>
            </ul>
        }
    </div>
</div>
<!-- /.row -->
    



