<Page
    x:Class="KitchenNotesUnivers.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KitchenNotesUnivers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="480" Width="800">
    
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/HomePage.png"/>
        </Grid.Background>
        <TextBlock x:ConnectionId='1' x:Name="txtHubName" HorizontalAlignment="Center" Margin="225,14,225,0" TextWrapping="Wrap" Text="KitchenNotes" VerticalAlignment="Top" Height="40" Width="350" Foreground="Black" FontSize="25" TextAlignment="Center"/>
        <ListView x:ConnectionId='2' x:Name="listViewNotes" Margin="10,130,540,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding forename}" FontWeight="Bold" />
                        <TextBlock Text="{Binding username}" FontSize="10" FontStyle="Italic"  />
                        <TextBlock Text="{Binding noteContent}" Foreground="Blue"/>
                        <TextBlock Text="{Binding timeAgo}" FontSize="10" FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:ConnectionId='3' x:Name="listViewTasks" Margin="544,130,10,0" Height="340" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding forename}" FontWeight="Bold" />
                        <TextBlock Text="{Binding username}" FontSize="10" FontStyle="Italic"  />
                        <TextBlock Text="{Binding taskDetail}" Foreground="Blue"/>
                        <TextBlock Text="{Binding assignedTo}" Foreground="Red"/>
                        <TextBlock Text="{Binding timeAgo}" FontSize="10" FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView x:ConnectionId='4' x:Name="listViewEvents" Margin="282,130,284,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding name}" FontWeight="Bold" />
                        <TextBlock Text="{Binding description}"  />
                        <TextBlock Text="{Binding shortStart}" Foreground="Green"/>
                        <TextBlock Text="{Binding shortEnd}" Foreground="Red"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <SymbolIcon x:ConnectionId='5' x:Name="SyncIcon" Symbol="57623"                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="72" Margin="0,10,0,0"/>
        <Button x:ConnectionId='6' x:Name="btnLogout" Content="Log Out" HorizontalAlignment="Left" Margin="716,19,0,0" VerticalAlignment="Top"                         Foreground="Black" BorderBrush="Black" Background="#33FFFFFF"/>


    </Grid>
</Page>

