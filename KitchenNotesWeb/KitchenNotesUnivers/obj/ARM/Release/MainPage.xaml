<Page
    x:Class="KitchenNotesUnivers.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KitchenNotesUnivers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center" Margin="10,10,411,0" TextWrapping="Wrap" Text="Kitchen Notes Login" VerticalAlignment="Top" FontSize="40" Width="603"/>
        <TextBox x:ConnectionId='2' x:Name="txtHubRefId" HorizontalAlignment="Left" Margin="66,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="49" Width="223" PlaceholderText="Hub Reference"/>
        <TextBox x:ConnectionId='3' x:Name="txtUsername" HorizontalAlignment="Left" Margin="66,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="49" Width="223" PlaceholderText="Username"/>
        <TextBox x:ConnectionId='4' x:Name="txtPassword" HorizontalAlignment="Left" Margin="66,254,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="49" Width="223" PlaceholderText="Password"/>
        <Button x:ConnectionId='5' x:Name="button" Content="Log In" HorizontalAlignment="Left" Margin="66,330,0,0" VerticalAlignment="Top" Height="49" Width="223"                     />

    </Grid>
</Page>

